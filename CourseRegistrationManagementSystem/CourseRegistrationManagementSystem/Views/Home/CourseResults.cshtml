@using CourseRegistrationManagementSystem.Models;
@using System.Collections.Generic

@{
    ViewData["Title"] = "Course Results";
}

<div class="container">

    <h2>Courses Found</h2>

    @foreach (var course in ViewBag.CourseList)
    {
        <h3 class="h3Course">@course.CourseName - @course.CourseRegistarCode - @course.CourseSubjectCode - @course.SectionNumber</h3>
        <br>
        <b>Term:</b><span>@course.CourseTerm</span>
        <br>
        <b>Registration Date Range:</b><span>@course.RegistrationStartDate to @course.RegistrationEndDate</span>
        <br>
        <b>Course Meeting Date Range:</b><span>@course.ClassStartDate - @course.ClassEndDate</span>
        <br>
        <b>Course Levels:</b>
        <br>
        <b>Instructional Method:</b><span>@course.ClassInstructionalMethod</span>
        <br>
        <b>Credit Hours:</b><span>@course.CreditHours</span>
        <br>
        <a href="">View Catalog Entry</a> 

        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Time</th>
                    <th>Meeting Days</th>
                    <th>Campus</th>
                    <th>Classroom Location</th>
                    <th>Instructor</th>
                </tr>
                <tr>
                    <td>2:00 pm - 3:15 pm</td>
                    <td>MW</td>
                    <td>@course.CampusName</td>
                    <td>@course.ClassroomName</td>
                    <td>@course.InstructorName</td>
                </tr>
            </table>
        </div>
    }

</div>