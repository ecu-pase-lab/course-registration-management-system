@using CourseRegistrationManagementSystem.Models;
@using System.Collections.Generic

@{
    ViewData["Title"] = "Daily Course Schedule";
}

@using (Html.BeginForm("Directions", "Home", FormMethod.Post, new { @id = "scheduleForm" }))
{

